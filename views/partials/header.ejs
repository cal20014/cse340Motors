<header id="top-header" class="header top-header">
  <section class="hero-section">
    <div class="heading-text-container">
      <h1 class="siteName">
        <a class="link title-text" href="/" title="Return to home page"
          >CSE Motors</a
        >
      </h1>

      <div id="tools">
        <% if (typeof user !== 'undefined' && user) { %>
          <h3>
            <a title="Click to log out" class="link" href="/account/logout"
              >Logout</a
            >
          </h3>
          <h3>
            <a title="Manage your account" class="link" href="/account/manage"
              >Welcome Basic</a
            >
          </h3>
        <% } else { %>
          <h3>
            <a title="Click to log in" class="link" href="/account/login"
              >My Account</a
            >
          </h3>
        <% } %>
      </div>
    </div>
  </section>
</header>