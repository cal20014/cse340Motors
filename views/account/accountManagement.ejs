<!-- error message -->
<%- messages() %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<!-- messages -->
<%- messages() %>

<div class="account-management-wrapper">

  <% if (locals.accountData.account_type === "Client") { %>
  <h2 class="welcome-message">Welcome <%= locals.accountData.account_firstname %></h2>
  <% } else if (locals.accountData.account_type === "Employee" ||
  locals.accountData.account_type === "Admin") { %>
  <h2 class="welcome-message">Welcome <%= locals.accountData.account_firstname %></h2>
  <h3 class="inventory-heading">Inventory Management</h3>
  <p class="inventory-link"><a href="/inv">Access Inventory Management</a></p>
  <% } %>

  <h3 class="manage-account-heading">Manage Account</h3>
  <p class="update-link">
    <a href="/account/update/<%= locals.accountData.account_id %>">
      Update Account Information
    </a>
  </p>
</div>