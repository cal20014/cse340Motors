<!-- error message -->
<%- messages() %> <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
  
  <!-- messages -->
  <%- messages() %>
  
  <% if (accountData.accountType === 'Client') { %>
    <h2>Welcome <%= accountData.firstName %></h2>
  <% } else if (accountData.accountType === 'Employee' || accountData.accountType === 'Admin') { %>
    <h2>Welcome <%= accountData.firstName %></h2>
    <h3>Inventory Management</h3>
    <p><a href="/inventory">Access Inventory Management</a></p>
  <% } %>
  
  <a href="/account/update/<%= accountData.id %>">Update Account Information</a>